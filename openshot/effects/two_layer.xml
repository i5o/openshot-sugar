<!DOCTYPE openshot-effect> 
<effect> 
	<title translatable="True">Black and White</title> 
	<description translatable="True">Adjust the color of the image to black and white based on a threshold</description> 
	<icon>two_layer.png</icon> 
	<category>Video</category> 
	<service>threshold</service> 
	
	<param name="midpoint" type="spinner" title="Midpoint" description=""> 
		<min>0</min> 
		<max>256</max> 
		<step>1.0</step>
		<default>105</default> 
	</param> 
		<param name="use_alpha" type="dropdown" title="Use Alpha" description=""> 
		<values> 
			<value name="Yes" num="1.0"/> 
			<value name="No" num="0.0"/> 
		</values> 
		<default>0.0</default> 
	</param> 
 
	<param name="invert" type="dropdown" title="Invert" description=""> 
		<values> 
			<value name="Yes" num="1.0"/> 
			<value name="No" num="0.0"/> 
		</values> 
		<default>0.0</default> 
	</param> 
 
</effect> 