<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE openshot-effect>
<effect>
	<title translatable="True">Chroma Hold</title>
	<description translatable="True">Display a single color, while using greyscale for the rest of the image</description>
	<icon>chroma_hold.png</icon>
	<category>Video</category>
	<service>chroma_hold</service>
	
	<param name="variance" type="spinner" title="Variance" description="">
		<min>0.0</min>
		<max>1.0</max>
		<step>0.01</step>
		<default>0.10</default>
	</param>
	
	<param name="key" type="color" title="Key" description="">
		<default>#00ff00</default>
	</param>

</effect>
